<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="15dp"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:gravity="center"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageDosen"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        android:src="@drawable/dosen1"
        android:background="@drawable/image_rounded_border" />

    <TextView
        android:id="@+id/namaDosen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Dosen"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/pendidikanDosen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[S1] Kampus A\n[S2] Kampus B"
        android:textSize="14sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="4dp" />
</LinearLayout>
